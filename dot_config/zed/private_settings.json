{
  "vim_mode": true,
  "theme": "One Dark Pro",
  "ui_font_size": 14,
  "buffer_font_size": 14,
  "buffer_font_family": "FiraCode Nerd Font",
  "tab_size": 2,
  "soft_wrap": "none",
  "relative_line_numbers": false,
  "cursor_blink": false,
  "format_on_save": "on",
  "auto_update": true,
  "preview_tabs": {
    "enabled": true,
    "enable_preview_from_file_finder": true,
    "enable_preview_from_code_navigation": true
  },
  "terminal": {
    "copy_on_select": true,
    "font_family": "FiraCode Nerd Font",
    "font_size": 14,
    "blinking": "terminal_controlled"
  },
  "auto_install_extensions": {
    "helm": true
  },
  "lsp": {
    "terraform-ls": {
      "initialization_options": {
        "experimentalFeatures": {
          "prefillRequiredFields": true
        }
      }
    },
    "helm-ls": {
      "enabled": true,
      "helmPath": "/opt/homebrew/bin/helm",
      "enableYAMLValidation": true
    }
  },
    "file_types": {
    "Helm": [
      "**/templates/**/*.tpl",
      "**/templates/**/*.yaml",
      "**/templates/**/*.yml",
      "**/helmfile.d/**/*.yaml",
      "**/helmfile.d/**/*.yml"
    ]
  },
  "languages": {
    "Helm": {
      "formatter": "helm-ls",
      "format_on_save": "off",
      "tab_size": 2,
      "diagnostics": {
        "include_warnings": true
      }
    },
    "YAML": {
      "format_on_save": "off",
      "tab_size": 2,
      "preferred_line_length": 120
    }
  },
  "active_pane_magnification": 1.1,
  "buffer_history_retention": "30d",
  "git": {
    "show_diff_signs_in_gutter": true,
    "auto_fetch_interval_minutes": 15
  },
  "bottom_dock_layout": "contained",
  "workspace": {
    "default_panel_size": 300,
    "panel_ratio": [0.7, 0.3]
  },
  "vim": {
    "use_system_clipboard": "always",
    "use_multiline_find": true
  },
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": false
  },
  "preferred_line_length": 100,
  "soft_wrap": "preferred_line_length",
  "use_autoclose": false,
  "git": {
    "inline_blame": {
      "enabled": false,
      "delay_ms": 500
    }
  }
}
